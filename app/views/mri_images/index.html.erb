<h2>
	Images for <%= @patient.name %>
</h2>
<div class="row">
	<div class="col-xs-12">
		<a class="btn btn-primary" href="/patients/<%=@patient.id%>/mri_images/new">Add New</a>
	</div>
</div>

<div class="row">
	<div class="col-xs-1">
		<h4>ID</h4>
	</div>
	<div class="col-xs-3">
		<h4>Upload Date/Time</h4>
	</div>
	<div class="col-xs-3">
	</div>
</div>

<% @mri_images.each do |image| %>
	<div class="row">
		<div class="col-xs-1">
			<%= image.id %>
		</div>
		<div class="col-xs-3">
			<%= image.created_at.to_formatted_s(:db) %>
		</div>
		<div class="col-xs-3">
			<a href="<%= image.file.url %>">Download</a>
		</div>
	</div>
<% end %>

<div class="row">
	<div class="col-xs-12">
    	<a class="btn btn-default" href="/patients">Back</a>
    </div>
</div>