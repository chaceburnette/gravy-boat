<h2>
  Add MRI Image for <%= @patient.name %>
</h2>

<%= form_with(model: @mri_image, local: true) do |form| %>
  <div class="field">
    <%= form.label "MRI File" %>
    <%= form.file_field :file, required: true %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
    <a class="btn btn-secondary" href="/patients/<%=@patient.id%>/mri_images">Back</a>
  </div>
<% end %>