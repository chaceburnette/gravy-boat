<h1>Users</h1>

<div class="users-list">
  <div class="row">
    <div class="col-xs-8">
      Name
    </div>
  </div>
  <% @users.each do |user| %>
    <div class="row">
      <div class="col-xs-4">
        <span class="user-email"><%= user.email %></span>
      </div>
      <% if user.id != current_user.id %>
        <div class="col-xs-4">
          <%= link_to edit_user_path(user) do %>
            <i class="glyphicon glyphicon-edit"></i>
          <% end %>
          <%= link_to user, method: :delete, data: { confirm: "Are you sure you want to delete #{user.email}?" } do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <br />

  <div class="row">
    <div class="col-xs-12">
      <%= link_to 'New User', new_user_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
