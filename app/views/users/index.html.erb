<h2>Users</h2>

<div class="grid">
  <div class="row">
    <div class="col-xs-12">
      <%= link_to 'New User', new_user_path, class: 'btn btn-primary pull-right' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8">
      Name
    </div>
  </div>
  <% @users.each do |user| %>
    <div class="row grid-row">
      <div class="col-xs-8">
        <span class="user-email"><%= user.email %></span>
      </div>
      <div class="col-xs-4 text-right">
        <%= link_to edit_user_path(user) do %>
          <i class="glyphicon glyphicon-edit"></i>
        <% end %>
        <%= link_to user, method: :delete, data: { confirm: "Are you sure you want to delete #{user.email}?" } do %>
          <i class="glyphicon glyphicon-trash"></i>
        <% end %>
      </div>
    </div>
  <% end %>

  <br />

  <div class="row">
    
  </div>
</div>
