<h2>
  Injuries
</h2>

<div class="grid">
  <div class="row">
    <div class="col-xs-12">
      <%= link_to 'New Injury Record', new_patient_path, class: 'btn btn-primary pull-right' %>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-1">
      ID
    </div>
    <div class="col-xs-8">
      Patient Name
    </div>
  </div>
  <% @patients.each do |patient| %>
    <div class="row grid-row">
      <div class="col-xs-1">
        <%= patient.id %>
      </div>
      <div class="col-xs-8 grid-link">
        <%= link_to patient.name, "/patients/#{patient.id}/mri_images" %>
      </div>
      <div class="col-xs-3 text-right">
        <%= link_to edit_patient_path(patient) do %>
          <i class="glyphicon glyphicon-edit"></i>
        <% end %>
        <% if current_user.admin? %>
          <%= link_to patient, method: :delete, data: { confirm: "Are you sure you want to delete #{patient.name}?" } do %>
            <i class="glyphicon glyphicon-trash"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
