<!DOCTYPE html>
<html>
  <head>
    <title>GravyBoat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div></div>
    
    <div class="container">
      <% flash.each do |name, msg| %>
        <%- css_class = name == 'alert' ? 'alert alert-danger' : 'alert alert-success' %>
        <div role='alert' class='<%=css_class %>'>
          <%= msg %>
        </div>
      <% end %>
      <% if logged_in? %>
        I'm Logged In!
      <% end %>
      <%= yield %>
  </div>
  </body>
</html>
